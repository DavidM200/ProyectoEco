<DxPopup
    HeaderText="Lineas Terminales"
    @bind-Visible="@_show"
    CloseOnEscape="false"
    CloseOnOutsideClick="false"
    ShowCloseButton="true"
    Width=60%>
<LinesTerminals @ref="linesTerminals" value="@_idline"/>
</DxPopup>

@code {
    private bool _show { set; get; } = false;
    private string _idline { set; get; } = "-1";
    public LinesTerminals linesTerminals { set; get; }

    public void show(int id)
    {
        _show = true;
        _idline = "" + id;
        StateHasChanged();
    }
    public void close()
    {
        _show = false;
    }
}
