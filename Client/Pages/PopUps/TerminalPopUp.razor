<DxPopup
    HeaderText="Lineas Terminales"
    @bind-Visible="@_show"
    CloseOnEscape="false"
    CloseOnOutsideClick="false"
    ShowCloseButton="true"
    Width=60%>
<LinesTerminals @ref="linesTerminals" value="@_idterminal"/>
</DxPopup>

@code {
    private bool _show { set; get; } = false;
    private string _idterminal { set; get; } = "-1";
    public LinesTerminals linesTerminals { set; get; }

    public void show(int id)
    {
        _show = true;

        _idterminal = ""+id;

        StateHasChanged();

        Console.WriteLine("Popup");
        Console.WriteLine(id);
    }
    public void close()
    {
        _show = false;
        
    }


    
}
